{
  "version": 2,
  "builds": [
    { "src": "admin/package.json",   "use": "@vercel/static-build", "config": { "distDir": "dist" } },
    { "src": "frontend/package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } },
    { "src": "backend/api/**/*.js",   "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)",  "dest": "/api/$1.js" },
    { "src": "/admin/(.*)","dest": "/admin/$1" },
    { "src": "/(.*)",      "dest": "/frontend/$1" }
  ]
}